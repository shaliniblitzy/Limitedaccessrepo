{
  "root": true,
  "env": {
    "es2022": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "plugins": [
    "node",
    "import"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:node/recommended",
    "plugin:import/recommended"
  ],
  "rules": {
    "no-unused-vars": [
      "warn",
      {
        "args": "none",
        "ignoreRestSiblings": true
      }
    ],
    "no-console": "off",
    "no-undef": "error",
    "no-var": "error",
    "prefer-const": "warn",
    "eqeqeq": [
      "error",
      "always"
    ],
    "curly": "error",
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single",
      {
        "avoidEscape": true
      }
    ],
    "indent": [
      "error",
      2,
      {
        "SwitchCase": 1
      }
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "arrow-spacing": [
      "error",
      {
        "before": true,
        "after": true
      }
    ],
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "ignores": [
          "modules"
        ]
      }
    ],
    "node/no-missing-import": [
      "error",
      {
        "tryExtensions": [
          ".mjs",
          ".js",
          ".json"
        ]
      }
    ],
    "node/no-unpublished-import": "off",
    "import/no-unresolved": [
      "error",
      {
        "commonjs": true,
        "caseSensitive": true
      }
    ],
    "import/order": [
      "warn",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always"
      }
    ],
    "spaced-comment": [
      "warn",
      "always",
      {
        "markers": [
          "/"
        ]
      }
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "max-len": [
      "warn",
      {
        "code": 100,
        "ignoreUrls": true
      }
    ],
    "require-jsdoc": "off",
    "valid-jsdoc": "off"
  },
  "overrides": [
    {
      "files": [
        "*.test.mjs",
        "*.test.js"
      ],
      "env": {
        "mocha": true,
        "jest": true
      },
      "rules": {
        "no-unused-expressions": "off",
        "node/no-unpublished-import": "off"
      }
    },
    {
      "files": [
        "*.mjs"
      ],
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}